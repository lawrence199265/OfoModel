<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuangbudong.ofo.activity.PersonInfoActivity">


    <com.zhuangbudong.ofo.widget.LinearLayoutListItemView
        android:id="@+id/personal_info_sex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        app:clickable="true"
        app:list_item_style="listitem_menu"
        app:text_left="性别"
        app:text_left_fontsize="18"
        app:text_margin_left="16"
        app:text_margin_right="16"
        app:text_right=""
        app:text_right_fontcolor="@color/gray3"
        app:text_right_fontsize="18" />

    <com.zhuangbudong.ofo.widget.LinearLayoutListItemView
        android:id="@+id/personal_info_birthday"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/personal_info_sex"
        android:gravity="center_vertical"
        app:clickable="true"
        app:list_item_line_show_model="listitem_show_top_line"
        app:list_item_style="listitem_menu"
        app:list_item_top_line_height_size="1"
        app:list_item_top_line_width_size="100"
        app:text_left="生日"
        app:text_left_fontsize="18"
        app:text_margin_left="16"
        app:text_margin_right="16"
        app:text_right=""
        app:text_right_fontcolor="@color/gray3"
        app:text_right_fontsize="18" />

    <com.zhuangbudong.ofo.widget.LinearLayoutListItemView
        android:id="@+id/personal_info_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/personal_info_birthday"
        android:gravity="center_vertical"
        app:clickable="true"
        app:list_item_line_show_model="listitem_show_top_line"
        app:list_item_style="listitem_menu"
        app:list_item_top_line_height_size="1"
        app:list_item_top_line_width_size="100"
        app:text_left="地址"
        app:text_left2="(现住地址)"
        app:text_left2_fontcolor="@color/gray3"
        app:text_left2_fontsize="14"
        app:text_left_fontsize="18"
        app:text_margin_left="16"
        app:text_margin_right="10"
        app:text_right=""
        app:text_right_fontcolor="@color/gray3"
        app:text_right_fontsize="14" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/personal_info_tl_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/main_color"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>
